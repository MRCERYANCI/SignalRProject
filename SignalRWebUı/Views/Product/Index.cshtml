@model List<SignalRWebUı.Dtos.ProductDtos.ResultProductDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
    int Count = 0;
}

<div class="col-md-12">
	<div class="card">
		<div class="card-header">
			<div class="card-title">Ürün Listesi(@Model.Count())</div>
		</div>
		<div class="card-body">
			<div class="card-sub">
				Ürünlerle ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz
			</div>
			<table class="table mt-3">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Ürün Adı</th>
						<th scope="col">Fiyatı</th>
						<th scope="col">Kategori</th>
						<th scope="col">Durum</th>
						<th scope="col">Sil</th>
						<th scope="col">Güncelle</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var x in Model)
					{
						Count++;
						<tr>
							<td>@Count</td>
							<td>@x.ProductName</td>
							<td>@x.ProductPrice.ToString("C")</td>
							<td>@x.CategoryName</td>
							<td>@x.ProductStatus</td>
							<td><a href="/Product/DeleteProduct?ProductId=@x.ProductID" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/Product/GetProduct?ProductId=@x.ProductID" class="btn btn-outline-success">Güncelle</a></td>
						</tr>
					}
				</tbody>
			</table>
			<a href="/Product/CreateProduct" class="btn btn-outline-primary">Yeni Ürün Girişi</a>
		</div>
	</div>

</div>

