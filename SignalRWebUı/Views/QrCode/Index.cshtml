
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}


<div class="container">
    <div class="container-fluid">
        <h4 class="page-title">QR Kod İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <input type="text" name="Value" class="form-control" />
                    <br />
                    <input type="submit" value="QR Code Oluştur" class="btn btn-warning" />
                </form>
                <br />

                @if (ViewBag.QRCodeImage != null)
                {
                    <img src="@ViewBag.QRCodeImage" alt="@ViewBag.QRCodeImage" style="width:400px;height:400px;" />
                }
            </div>
        </div>
    </div>
</div>



