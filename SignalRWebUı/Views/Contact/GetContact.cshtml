@model SignalRWebUı.Dtos.ContactDtos.UpdateContactDto

@{
    ViewData["Title"] = "GetContact";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <div class="card-title">Yeni İletişim Yazı Güncellemesi</div>
        </div>
        <form method="post">
            <div class="card-body">
                <input type="hidden" asp-for="ContactID">
                <div class="form-group">
                    <label for="location">Lokasyon Bilgisi</label>
                    <input type="text" asp-for="ContactLocation" class="form-control" id="email" placeholder="Lokasyonu Giriniz...">
                </div>
                <div class="form-group">
                    <label for="phone">Telefon Numarası</label>
                    <input type="text" asp-for="ContactPhone" class="form-control" id="email" placeholder="Telefon Numarası Giriniz...">
                </div>
                <div class="form-group">
                    <label for="mail">Mail Adresi</label>
                    <input type="email" asp-for="ContactMail" class="form-control" id="email" placeholder="Mail Adresi Giriniz...">
                </div>
                <div class="form-group">
                    <label for="aciklama">Footer Açıklama</label>
                    <textarea asp-for="ContactFooterDescription" class="form-control" rows="8" placeholder="Açıklama Giriniz..."></textarea>
                </div>


            </div>
            <div class="card-action">
                <button class="btn btn-success">Güncelle</button>
                <a href="/Contact/Index" class="btn btn-danger">İptal Et</a>
            </div>
        </form>
    </div>
</div>

