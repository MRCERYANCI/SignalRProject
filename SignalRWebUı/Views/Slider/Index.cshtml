@model List<SignalRWebUı.Dtos.SliderDtos.ResultSliderDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Admin/_AdminLayout.cshtml";
	int Count = 0;
}

<div class="col-md-12">
	<div class="card">
		<div class="card-header">
			<div class="card-title">Öne Çıkan Alan Listesi(@Model.Count())</div>
		</div>
		<div class="card-body">
			<div class="card-sub">
				Ana Sayfada Öne Çıkan Alan ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz
			</div>
			<table class="table mt-3">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Başlık 1</th>
						<th scope="col">Başlık 2</th>
						<th scope="col">Başlık 3</th>
						<th scope="col">Açıklama 1</th>
						<th scope="col">Açıklama 2</th>
						<th scope="col">Açıklama 3</th>
						<th scope="col">Sil</th>
						<th scope="col">Güncelle</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var x in Model)
					{
						Count++;
						<tr>
							<td>@Count</td>
							<td>@x.SliderTitle1</td>
							<td>@x.SliderTitle2</td>
							<td>@x.SliderTitle3</td>
							<td>@x.Description1</td>
							<td>@x.Description2</td>
							<td>@x.Description3</td>
							<td><a href="/Slider/DeleteSlider?SliderId=@x.SliderId" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/Slider/GetSlider?SliderId=@x.SliderId" class="btn btn-outline-success">Güncelle</a></td>
						</tr>
					}
				</tbody>
			</table>
			<a href="/Slider/CreateSlider" class="btn btn-outline-primary">Yeni Öne Çıkan Alan Girişi</a>
		</div>
	</div>

</div>

