@model List<SignalRWebUı.Dtos.ContactDtos.ResultContactDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Admin/_AdminLayout.cshtml";
	int Count = 0;
}



<div class="col-md-12">
	<div class="card">
		<div class="card-header">
			<div class="card-title">İletişim Listesi(@Model.Count())</div>
		</div>
		<div class="card-body">
			<div class="card-sub">
				İletişim Alanıyla İlgili İşlemleri Yapabilirsiniz. Tema Bütünlüğü İçin Sadece 1 Tane İletişim Alanı Oluşturmayı Unutmayın.
			</div>
			<table class="table mt-3">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Konum</th>
						<th scope="col">Telefon</th>
						<th scope="col">Mail</th>
						<th scope="col">Açıklama</th>
						<th scope="col">Sil</th>
						<th scope="col">Güncelle</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var x in Model)
					{
						Count++;
						<tr>
							<td>@Count</td>
							<td>@x.ContactLocation.Substring(0,20)...</td>
							<td>@x.ContactPhone</td>
							<td>@x.ContactMail</td>
							@if(x.ContactFooterDescription.Length > 200)
							{
								<td>@x.ContactFooterDescription.Substring(0,200)...</td>
							}
							else
							{
								<td>@x.ContactFooterDescription</td>
							}
							<td><a href="/Contact/DeleteContact?ContactId=@x.ContactID" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/Contact/GetContact?ContactId=@x.ContactID" class="btn btn-outline-success">Güncelle</a></td>
						</tr>
					}
				</tbody>
			</table>
			<a href="/Contact/CreateContact" class="btn btn-outline-primary">Yeni İletişim Girişi</a>
		</div>
	</div>

</div>