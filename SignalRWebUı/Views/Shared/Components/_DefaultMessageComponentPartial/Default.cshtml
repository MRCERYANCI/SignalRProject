@model SignalRWebUı.Dtos.MessageDtos.CreateMessageDto

<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Bize Ulaşın
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <form method="post">
                        <div>
                            <input type="text" id="adsoyad" class="form-control" placeholder="Adınızı Soyadınızı Giriniz" required/>
                        </div>
                        <div>
                            <input type="text" class="form-control" id="telefon" placeholder="Telefon Numarasını Giriniz..." required />
                        </div>
                        <div>
                            <input type="email" class="form-control" id="mail" placeholder="Mail Adresinizi Giriniz..." required />
                        </div>
                        <div>
                            <input type="text" class="form-control" id="konu" placeholder="Mesaj Başlığını Giriniz..." required />
                        </div>
                        <div>
                            <textarea id="mesasage" placeholder="Mesaj İçeriğini Giriniz..." class="form-control" rows="8" required></textarea>
                        </div>


                        <div class="btn_box">
                            <button id="btn">
                                Mesaj Gönder
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="map_container ">
                    <div id="googleMap"></div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>

<script type="text/javascript">

    $("#btn").click(function () {
        let values = {
            NameSurname: $("#adsoyad").val(),
            PhoneNumber: $("#telefon").val(),
            Email: $("#mail").val(),
            Subject: $("#konu").val(),
            MessageContent: $("#mesasage").val()
        };

        $.ajax({
            type: "post",
            url: "/Message/AddNewMessage/",
            data: values,
            success: function (func) {
                let result = jQuery.parseJSON(func);
                alert("Mesajınız Başarıyla İletilmiştir");
            }
        });
    });
</script>