@model List<SignalRWebUı.Dtos.MenuTableDtos.ResultMenuTableDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Admin/_AdminLayout.cshtml";
	int Count = 0;
}

<div class="col-md-12">
	<div class="card">
		<div class="card-header">
			<div class="card-title">Masalar Listesi(@Model.Count())</div>
		</div>
		<div class="card-body">
			<div class="card-sub">
				Masalar ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz
			</div>
			<table class="table mt-3">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Masa Adı</th>
						<th scope="col">Sil</th>
						<th scope="col">Güncelle</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var x in Model)
					{
						Count++;
						<tr>
							<td>@Count</td>
							<td>@x.MenuName</td>
							<td><a href="/MenuTable/DeleteMenuTable?MenuTableId=@x.MenuTableId" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/MenuTable/GetMenuTable?MenuTableId=@x.MenuTableId" class="btn btn-outline-success">Güncelle</a></td>
						</tr>
					}
				</tbody>
			</table>
			<a href="/MenuTable/CreateMenuTable" class="btn btn-outline-primary">Yeni Masa Girişi</a>
		</div>
	</div>

</div>

