@model List<SignalRWebUı.Dtos.TestimonialDtos.ResultTestimonialDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Admin/_AdminLayout.cshtml";
	int Count = 0;
}

<div class="col-md-12">
	<div class="card">
		<div class="card-header">
			<div class="card-title">Referanslar Listesi(@Model.Count())</div>
		</div>
		<div class="card-body">
			<div class="card-sub">
				Müşterilerin yaptığı yorumlar ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz
			</div>
			<table class="table mt-3">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Ad Soyad</th>
						<th scope="col">Unvan</th>
						<th scope="col">Durum</th>
						<th scope="col">Sil</th>
						<th scope="col">Güncelle</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var x in Model)
					{
						Count++;
						<tr>
							<td>@Count</td>
							<td>@x.TestimonialName</td>
							<td>@x.TestimonialTitle</td>
							<td>@x.TestimonialStatus</td>
							<td><a href="/Testimonial/DeleteTestimonial?TestimonialId=@x.TestimonialID" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/Testimonial/GetTestimonial?TestimonialId=@x.TestimonialID" class="btn btn-outline-success">Güncelle</a></td>
						</tr>
					}
				</tbody>
			</table>
			<a href="/Testimonial/CreateTestimonial" class="btn btn-outline-primary">Yeni Referans Girişi</a>
		</div>
	</div>

</div>

