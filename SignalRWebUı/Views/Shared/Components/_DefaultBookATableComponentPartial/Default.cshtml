@model SignalRWebUı.Dtos.BookingDtos.CreateBookingDto

<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Rezervasyon Yapın
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <form method="post" asp-action="AddBokkATable" asp-controller="BookATable">
                        <div>
                            <input type="text" asp-for="Name" class="form-control" placeholder="Adınızı Soyadınızı Giriniz" />
                        </div>
                        <div>
                            <input type="text" class="form-control" asp-for="Phone" placeholder="Telefon Numarasını Giriniz..." />
                        </div>
                        <div>
                            <input type="email" class="form-control" asp-for="Mail" placeholder="Mail Adresinizi Giriniz" />
                        </div>
                        <div>
                            <select class="form-control nice-select wide" asp-for="PersonCount">
                                <option value="" disabled selected>
                                    Kaç Kişiniz?
                                </option>
                                <option value="1">
                                    1
                                </option>
                                <option value="2">
                                    2
                                </option>
                                <option value="3">
                                    3
                                </option>
                                <option value="4">
                                    4
                                </option>
                                <option value="5">
                                    5
                                </option>
                            </select>
                        </div>
                        <div>
                            <input type="datetime-local" asp-for="Date" class="form-control">
                        </div>
                        <div class="btn_box">
                            <button>
                                Rezervasyon Yap
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="map_container ">
                    <div id="googleMap"></div>
                </div>
            </div>
        </div>
    </div>
</section>